{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./",
      "paths": {
        "@interfaces": ["./src/interfaces"],
        "@interfaces/*": ["./src/interfaces/*"],
        "@utils": ["./src/utils"],
        "@utils/*": ["./src/utils/*"],
      },
      "skipLibCheck": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*",
      "puglins/**/*",
      "bin/**/*",
      "*.config.js",
    ],
    "exclude": ["docs/**/*", "test-app/**/*"]
  }